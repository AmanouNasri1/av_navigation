<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>av_navigation</name>
  <version>0.1.0</version>
  <description>Autonomous Vehicle Navigation project â€” Webots Tesla simulation with ROS 2 Humble, SLAM, and teleoperation.</description>

  <maintainer email="aman@example.com">Aman</maintainer>
  <license>MIT</license>

  <url type="website">https://github.com/aman/av_navigation</url>
